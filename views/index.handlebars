<div class="container app">
  <div class="row">
    <div class="col-md-6">
      <h2>Uneaten Burgers</h2><ol>
        {{#each burgers}}
        {{#unless this.devoured}}
        <form action="burger/eat/{{id}}" method="POST">
          <div class="input-group">
             <li>{{this.burger_name}}
          <button type="submit" class='uneaten'>Eat!  </button>
        </li>
          </div>
        </form>
        {{/unless}}
        {{/each}}
    </div>

    <div class="col-md-6">
        <h2>All burgers</h2>
      <ol class='burgerEaten'>
        {{#each burgers}}
        <li>{{this.burger_name}}</li>
        {{/each}}
      </ol>
    </div>
  </div>
</div>

<hr>

<div class="container app">

  <div class="row">
    <div class="col-md-12">
        <h2>Enter a burger you want to eat and submit!</h2>
      <form action="/burgers" method="POST">
        <input type="text" id="name" name="burger_name" placeholder="World's best burger">
        <button type="submit" class="add">Submit</button>
      </form>
    </div>
  </div>
</div>